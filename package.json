{
  "name": "vesai",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "website"
  ],
  "description": "VESAI local-first open source analyzer",
  "bin": {
    "vesai": "./bin/vesai"
  },
  "scripts": {
    "vesai": "bun cli/src/index.ts",
    "quickstart": "bun cli/src/index.ts quickstart",
    "daemon": "bun daemon/src/index.ts",
    "doctor": "bun cli/src/index.ts doctor",
    "jobs": "bun cli/src/index.ts jobs",
    "lint": "ultracite check bin cli daemon packages scripts tests website .github docs README.md package.json tsconfig.local.json",
    "lint:fix": "ultracite fix bin cli daemon packages scripts tests website .github docs README.md package.json tsconfig.local.json",
    "website:dev": "bun run --cwd website dev",
    "website:build": "bun run --cwd website build",
    "website:start": "bun run --cwd website start",
    "precommit": "bun run lint && bun run typecheck && bun run test",
    "prepare": "husky",
    "typecheck": "bunx tsc -p tsconfig.local.json --noEmit",
    "test": "bun test ./tests/*.test.ts",
    "test:coverage": "bun test --coverage ./tests/*.test.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.0",
    "@google/genai": "^1.30.0",
    "commander": "^14.0.1",
    "fflate": "^0.8.2",
    "playwright": "^1.55.1",
    "rrweb": "^2.0.0-alpha.18",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "bun-types": "^1.3.8",
    "husky": "^9.1.7",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "ultracite": "^7.2.1"
  }
}
